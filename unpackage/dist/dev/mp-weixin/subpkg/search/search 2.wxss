/* 水平间距 */
.search-box {
  position: -webkit-sticky;
  position: sticky;
  top: -2px;
  z-index: 999;
}
.sugg-list {
  padding: 0 5px;
}
.sugg-list .sugg-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 12px;
  padding: 13px 0;
  border-bottom: 1px solid #efefef;
}
.sugg-list .sugg-item .goods-name {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.history-box {
  padding: 0 5px;
}
.history-box .history-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 40px;
  line-height: 40px;
  border-bottom: 1px solid #efefef;
  font-size: 15px;
}
.history-list {
  display: flex;
  flex-wrap: wrap;
}
.history-list .uni-tag {
  margin-top: 5px;
  margin-right: 5px;
}

